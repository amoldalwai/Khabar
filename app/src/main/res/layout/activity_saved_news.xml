<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/saved_news_activity_id"
    tools:context=".SavedNewsActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Saved Items"
        android:layout_alignParentTop="true"
        android:id="@+id/saved_news_toolbar_id">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/saved_news_toolbar_id"
        android:layout_height="wrap_content"
        android:id="@+id/saved_news_rv_id">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/not_found_text_saved"
        android:textColor="#c0c5ce"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:text="Empty"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>